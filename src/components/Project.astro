---
const { title, subtitle, period, url, imgSrc } = Astro.props;
---

<a href={url}>
    <div>
        <img src={imgSrc} width="500" />

        <p>
            <span class="title">{title}</span>
            <span class="period">({period})</span>
        </p>
        <p class="subtitle">{subtitle}</p>
    </div>
</a>

<style>
    a {
        text-decoration: none;
        color: black;
        margin: 2rem;
        display: inline-flex;
    }
    a:hover img{
        box-shadow: 1rem 1rem 1rem rgba(0, 0, 0, 0.082);
    }
    .title {
        font-weight: bold;
    }
    .period {
        text-align: right;
    }
    .subtitle {
    }
</style>
