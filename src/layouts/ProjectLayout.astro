---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <h1>{frontmatter.title}</h1>
    <p>最終更新: {frontmatter.lastUpdate}</p>
    <div class="thumbnail">
        <img src={frontmatter.thumbnailUrl} width="600" />
    </div>
    <slot />
</BaseLayout>

<style>
    .thumbnail {
        overflow: hidden;
    }
</style>
